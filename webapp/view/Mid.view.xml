<mvc:View
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:ce="sap.ui.codeeditor"
  xmlns:l="sap.ui.layout.form"
  controllerName="sap.ui.demo.basicTemplate.controller.Mid"
>
  <Page showHeader='false'>
    <HeaderContainer>
      <ObjectHeader
        backgroundDesign='translucent'
        title='title'
        condensed='false'
      />
      <Input id='input' />
      <Button press='onSubmit' />
    </HeaderContainer>
    <ce:CodeEditor id="code" type="json" colorTheme="clouds" editable="false" height="200px"/>
    <Table>
      <columns>
        <Column width='85%'>
          <Text text="text" />
        </Column>
        <Column>
          <Text text="text" />
        </Column>
      </columns>
      <items>
        <ColumnListItem>
          <cells>
            <ObjectIdentifier text="something" />
            <ObjectNumber number="something" />
          </cells>
        </ColumnListItem>
      </items>
    </Table>
    <footer />
  </Page>
</mvc:View>
